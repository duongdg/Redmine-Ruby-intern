<div id="main" >
  <% provide :title, t("views.user.edit.title") %>
  <div>
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user do |f| %>

        <%= render "shared/error_messages", object: f.object %>

        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>

        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :password_confirmation, t("views.password_reset.edit.confirm") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>

        <% if current_user.user_type==0 %>
          <%= f.label :user_type %>
          <%= f.text_field :user_type, class: "form-control" %>
        <% end %>

        <div style="margin: 2%;">
          <%= f.submit t("savechange"), class: "btn btn-primary" %>
          <%= link_to t("back"), users_path, class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
